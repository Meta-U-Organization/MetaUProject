generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

model post {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  useStatus   Int
  Photos      String[]
  doantion    Boolean
  user        user?    @relation(fields: [userId], references: [id])
  userId      Int?
}

model user {
  id       Int    @id @default(autoincrement())
  name     String
  address  String
  phone    Int
  password String
  posts    post[]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
